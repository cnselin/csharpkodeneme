using System;

public class Deneme
{

    public static void Main(string[] args)
    {
        double pi = 3.14, yariCap, alan, cevre;

        Console.Write("Yarçıapı giriniz:");
        yariCap = double.Parse(Console.ReadLine());   //parse:kullanıcının girdiği değeri double değer dönüştürür.

        alan = pi * (yariCap * yariCap);
        Console.WriteLine("Dairenin alani : {0}", alan);

        cevre = 2 * (pi * yariCap);
        Console.WriteLine("Dairenin cevresi : {0}", cevre);

    }
}
